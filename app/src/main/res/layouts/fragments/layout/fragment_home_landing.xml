<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.services.common.BindingUtils" />

        <variable
            name="homeViewModel"
            type="com.example.services.viewmodels.home.HomeViewModel" />

    </data>

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->
    <!--
            android:background="@drawable/back_image"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--
                    android:background="@drawable/back_image"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#ffffff"
            android:orientation="vertical">
            <!-- android:background="@color/screenBackgroundColor"-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="2dp"
                    android:drawableLeft="@drawable/ic_search_map"
                    android:drawablePadding="@dimen/dp_10"
                    android:editable="false"
                    android:elevation="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:hint="@string/current_location"
                    android:imeOptions="actionDone"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@color/colorblack"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:font="@{`regular`}"
                    tools:ignore="Autofill,RtlSymmetry" />

                <EditText
                    android:id="@+id/etSearch1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtLoc"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/round_back_transparent"
                    android:drawableLeft="@drawable/ic_search"
                    android:drawablePadding="@dimen/dp_10"
                    android:editable="false"
                    android:elevation="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:hint="@string/search"
                    android:imeOptions="actionDone"
                    android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                    android:padding="@dimen/dp_15"
                    android:singleLine="true"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/hint_size"
                    android:visibility="gone"
                    app:font="@{`regular`}"
                    tools:ignore="Autofill,RtlSymmetry" />

                <ImageView
                    android:id="@+id/imgCart1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/etSearch1"
                    android:layout_alignBottom="@+id/etSearch1"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:backgroundTint="#000"
                    android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                    android:src="@drawable/ic_cart"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtCount1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignTop="@+id/imgCart1"
                    android:layout_alignRight="@+id/imgCart1"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_round"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:font="@{`bold`}"

                    tools:text="1" />
            </RelativeLayout>

            <GridView
                android:id="@+id/gv_services"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:fadeScrollbars="false"
                android:horizontalSpacing="@dimen/dp_5"
                android:numColumns="2"
                android:padding="@dimen/dp_5"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/dp_5"
                android:visibility="gone" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/gridview">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--
                                            android:layout_marginTop="@dimen/dp_10"-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgNavigation"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:backgroundTint="#ffffff"
                            android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                            android:src="@drawable/ic_menu"
                            android:visibility="visible" />

                        <RadioGroup
                            android:id="@+id/delPickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"

                            android:background="@drawable/del_pickup_back"
                            android:checkedButton="@+id/offer"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:visibility="visible">

                            <!---->

                            <!--                                android:background="@drawable/round_back_transparent_new"
                            -->
                            <RadioButton
                                android:id="@+id/rdDelivery"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/round_back_transparent_new"
                                android:button="@null"
                                android:gravity="center"
                                android:text="Delivery"
                                android:textColor="@color/colorWhite"
                                app:font="@{`regular`}" />

                            <RadioButton
                                android:id="@+id/rdPickup"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:button="@null"
                                android:checked="false"
                                android:gravity="center"
                                android:text="Pickup"
                                android:textColor="@color/colorBlack"
                                app:font="@{`regular`}" />
                        </RadioGroup>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/imgFilter"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_centerVertical="true"
                            android:backgroundTint="#ffffff"
                            android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                            android:src="@drawable/ic_restaurent_image"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginBottom="2dp"
                            android:layout_toLeftOf="@+id/imgFilter"
                            android:background="@drawable/round_back_transparent_search"
                            android:drawableLeft="@drawable/ic_search"
                            android:drawablePadding="@dimen/dp_10"
                            android:editable="false"
                            android:gravity="center_vertical"
                            android:hint="Search for food..."
                            android:imeOptions="actionDone"
                            android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:singleLine="true"
                            android:textColor="@color/colorblack"
                            android:textSize="@dimen/hint_size"
                            app:font="@{`regular`}"
                            tools:ignore="Autofill,RtlSymmetry" />
                    </RelativeLayout>

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/dealsViewPager1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_150"
                        android:layout_margin="@dimen/dp_5"
                        android:elevation="@dimen/dp_20"
                        android:visibility="gone"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:id="@+id/textMarquee1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="Top Picks For You"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textMarquee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:ellipsize="marquee"
                            android:fadingEdge="horizontal"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="Food Delivery App"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="24sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <com.github.angads25.toggle.LabeledSwitch
                            android:id="@+id/switchDelPickup"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:switchTextAppearance="@style/SwitchTextAppearance"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            android:visibility="gone"
                            app:colorBorder="@color/colorWhite"
                            app:colorOff="#00c4a6"
                            app:colorOn="@color/colorPrimary"
                            app:on="true"
                            app:textOff="Pickup"
                            app:textOn="Delivery" />


                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchMaterial"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_5"
                            android:checked="false"
                            android:padding="5dp"
                            android:switchPadding="5dp"
                            android:text="Veg Only  "
                            android:textColor="@color/colorSuccess"
                            android:visibility="gone" />
                    </RelativeLayout>




                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/bannersViewpager"
                        android:layout_width="match_parent"
                        android:layout_height="165dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:elevation="@dimen/dp_20"
                        android:visibility="gone"
                        tools:ignore="UnusedAttribute" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/dealsViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_150"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:elevation="@dimen/dp_20"
                        android:visibility="gone"
                        tools:ignore="UnusedAttribute" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5">


                        <TextView
                            android:id="@+id/txtSuggested"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="Suggested Items"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            app:font="@{`bold`}" />


                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSuggested"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:padding="@dimen/dp_5"
                        android:visibility="visible" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5">


                        <TextView
                            android:id="@+id/txtTopPick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="Top Picks For You"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            app:font="@{`bold`}" />


                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTopPicks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:padding="@dimen/dp_5"
                        android:visibility="visible" />
                    <LinearLayout
                        android:id="@+id/trending_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_5">

                        <TextView

                            android:id="@+id/tv_trending_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/trending_services"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            app:font="@{`bold`}" />

                        <TextView
                            android:id="@+id/tv_sub_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_trending_heading"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:gravity="center"
                            android:text="@string/most_booked_services_in_this_week"
                            android:textAllCaps="false"
                            android:textSize="@dimen/sp_12"
                            android:visibility="gone"
                            app:font="@{`regular`}" />

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/trendingViewPager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_sub_heading"
                            android:layout_marginTop="@dimen/dp_5"
                            android:visibility="gone">

                        </androidx.viewpager.widget.ViewPager>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/trendingRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:padding="@dimen/dp_5"
                            android:visibility="visible" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10">


                        <TextView
                            android:id="@+id/txtCoupons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="Coupons"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            app:font="@{`bold`}" />


                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCouponsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:padding="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_70"

                        android:visibility="visible" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_5">

                        <TextView
                            android:id="@+id/txtBest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@drawable/ic_best_seller"
                            android:elevation="5dp"
                            android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="Best Seller"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_12"
                            app:font="@{`regular`}" />
                        <!-- -->
                        <TextView
                            android:id="@+id/txtNear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_toRightOf="@+id/txtBest"
                            android:background="@drawable/ic_near_by"
                            android:elevation="5dp"
                            android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="Near By Restaurant"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_12"
                            app:font="@{`regular`}" />
                        <!--  android:layout_alignParentRight="true"-->
                        <TextView
                            android:id="@+id/txtSeeAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_toRightOf="@+id/txtNear"
                            android:background="@drawable/ic_view_all"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:text="View All"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/sp_12"
                            app:font="@{`regular`}" />

                        <RelativeLayout
                            android:id="@+id/rlVendors"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/txtBest"
                            android:layout_marginTop="@dimen/dp_5"
                            android:visibility="gone">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvVendors"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/gridview"

                                android:layout_marginBottom="@dimen/dp_5"
                                android:layoutAnimation="@anim/layout_animation_from_left"
                                android:nestedScrollingEnabled="false"
                                android:padding="@dimen/dp_5"
                                android:visibility="visible" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlBestSeller"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/txtBest"
                            android:layout_marginTop="@dimen/dp_5"
                            android:visibility="visible">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvBestSeller"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginBottom="@dimen/dp_5"
                                android:layoutAnimation="@anim/layout_animation_from_left"
                                android:nestedScrollingEnabled="false"
                                android:padding="@dimen/dp_5"
                                android:visibility="visible" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvVendors1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/gridview"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layoutAnimation="@anim/layout_animation_from_left"
                            android:nestedScrollingEnabled="false"
                            android:padding="@dimen/dp_5"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/dp_5" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="Best Seller"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:font="@{`regular`}" />


                    <LinearLayout
                        android:id="@+id/offers_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/trending_layout"
                        android:background="@color/colorWhite"
                        android:elevation="@dimen/dp_5"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_5">

                        <TextView
                            android:id="@+id/tv_offers_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/offers"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            app:font="@{`bold`}" />

                        <TextView
                            android:id="@+id/tv_offer_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_offers_heading"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:gravity="center"
                            android:text="@string/most_booked_services_in_this_week"
                            android:textAllCaps="false"
                            android:textSize="@dimen/sp_12"
                            android:visibility="gone"
                            app:font="@{`regular`}" />

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/offersViewpager"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_below="@+id/tv_sub_heading"
                            android:layout_marginTop="@dimen/dp_5" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_offers"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_below="@+id/tv_offers_heading"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout><!-- </ScrollView>-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">





            <RelativeLayout
                android:layout_above="@+id/llOrderStatus"
                android:id="@+id/img_right"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_cart_back"
                android:onClick="@{(v) -> homeViewModel.clickListener(v)}">

                <ImageView
                    android:id="@+id/imgCart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_cart" />

                <TextView
                    android:id="@+id/txtCount"
                    android:layout_width="11dp"
                    android:layout_height="10dp"
                    android:layout_alignTop="@+id/imgCart"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="21dp"
                    android:background="@drawable/ic_count_back"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />

            </RelativeLayout>


            <ImageView
                android:layout_above="@+id/llOrderStatus"
                android:id="@+id/menuItems"
                android:layout_width="40dp"
                android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/ic_hamburger" />


            <RelativeLayout
                android:id="@+id/llOrderStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:background="#70000000"
                android:elevation="8dp"
                android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/deliverType"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtOrderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/animationView"
                    android:text="Your order is confirmed"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:font="@{`regular`}" />

                <TextView
                    android:id="@+id/txtOrderDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtOrderStatus"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/animationView"
                    android:text="Sit back and relax as your order is confirmed"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    app:font="@{`regular`}" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtOrderDes"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/animationView"
                    android:text="Amount: "
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    app:font="@{`regular`}" />

                <TextView
                    android:id="@+id/txtOrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtOrderDes"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="Order No:  "
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    app:font="@{`regular`}" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/order_statuss" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>
