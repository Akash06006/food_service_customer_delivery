<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.services.common.BindingUtils" />

        <variable
            name="homeViewModel"
            type="com.example.services.viewmodels.home.HomeViewModel" />

    </data>

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="2dp"
                android:layout_toLeftOf="@+id/imgSearch"
                android:background="@drawable/round_back_transparent"
                android:drawableLeft="@drawable/ic_search_map"
                android:drawablePadding="@dimen/dp_10"
                android:editable="false"
                android:elevation="@dimen/dp_5"
                android:gravity="center_vertical"
                android:hint="@string/current_location"
                android:imeOptions="actionDone"
                android:padding="@dimen/dp_15"
                android:singleLine="true"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/hint_size"
                app:font="@{`regular`}"
                tools:ignore="Autofill,RtlSymmetry" />

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_10"
                android:backgroundTint="#000"
                android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                android:src="@drawable/ic_search" />
        </RelativeLayout>

        <GridView
            android:id="@+id/gv_services"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:fadeScrollbars="false"
            android:horizontalSpacing="@dimen/dp_5"
            android:numColumns="2"
            android:padding="@dimen/dp_5"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/dp_5"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/gridview">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/dealsViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_margin="@dimen/dp_5"
                    android:elevation="@dimen/dp_20"
                    tools:ignore="UnusedAttribute" />


                <RadioGroup
                    android:id="@+id/delPickup"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/del_pickup_back"
                    android:checkedButton="@+id/offer"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdDelivery"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_back_transparent_new"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Delivery"
                        android:textColor="@color/colorBlack" />

                    <RadioButton
                        android:id="@+id/rdPickup"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="false"
                        android:gravity="center"
                        android:text="Pickup"
                        android:textColor="@color/colorBlack" />
                </RadioGroup>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/bannersViewpager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_margin="@dimen/dp_5"
                    android:elevation="@dimen/dp_20"
                    tools:ignore="UnusedAttribute" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/txtTopPick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="Top Picks For You"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchMaterial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:checked="false"
                        android:padding="10dp"
                        android:switchPadding="5dp"
                        android:text="Veg Only  " />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTopPicks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="Restaurants"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtSeeAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_15"
                        android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                        android:text="View All"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvVendors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gridview"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layoutAnimation="@anim/layout_animation_from_left"
                        android:nestedScrollingEnabled="false"
                        android:padding="@dimen/dp_5"
                        android:visibility="visible" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dp_5" />

                <LinearLayout
                    android:id="@+id/trending_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_5">

                    <TextView

                        android:id="@+id/tv_trending_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:text="@string/trending_services"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        app:font="@{`bold`}" />

                    <TextView
                        android:id="@+id/tv_sub_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_trending_heading"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:gravity="center"
                        android:text="@string/most_booked_services_in_this_week"
                        android:textAllCaps="false"
                        android:textSize="@dimen/sp_12"
                        app:font="@{`regular`}" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/trendingViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@+id/tv_sub_heading"
                        android:layout_marginTop="@dimen/dp_5">

                    </androidx.viewpager.widget.ViewPager>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="Best Seller"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBestSeller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:nestedScrollingEnabled="false"
                        android:padding="@dimen/dp_5"
                        android:layoutAnimation="@anim/layout_animation_from_left"
                        android:visibility="visible" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/offers_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/trending_layout"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/dp_5"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_5">

                    <TextView
                        android:id="@+id/tv_offers_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offers"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        app:font="@{`bold`}" />

                    <TextView
                        android:id="@+id/tv_offer_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_offers_heading"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:gravity="center"
                        android:text="@string/most_booked_services_in_this_week"
                        android:textAllCaps="false"
                        android:textSize="@dimen/sp_12"
                        android:visibility="gone"
                        app:font="@{`regular`}" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/offersViewpager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@+id/tv_sub_heading"
                        android:layout_marginTop="@dimen/dp_5" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_offers"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_below="@+id/tv_offers_heading"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout><!-- </ScrollView>-->
</layout>
