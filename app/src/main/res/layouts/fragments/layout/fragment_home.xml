<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.services.common.BindingUtils" />

        <variable
            name="homeViewModel"
            type="com.example.services.viewmodels.home.HomeViewModel" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/upper_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_150"
                android:paddingStart="@dimen/dp_30"
                android:paddingLeft="@dimen/dp_30"
                android:text="@string/welcome"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_22"
                app:font="@{`semibold`}"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_30"
                android:paddingLeft="@dimen/dp_30"
                android:text="@{BindingUtils.getUserName()+`!`}"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_22"
                app:font="@{`semibold`}"
                tools:ignore="RtlSymmetry"
                tools:text="Karan!" />

            <RelativeLayout
                android:id="@+id/childLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="8.7"
                android:gravity="center">

            </RelativeLayout>

        </LinearLayout>

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:background="@color/colorWhite"
            android:elevation="@dimen/dp_5"
            android:horizontalSpacing="@dimen/dp_2"
            android:maxHeight="200dp"
            android:numColumns="4"
            android:padding="@dimen/dp_5"
            android:verticalSpacing="@dimen/dp_2"
            android:visibility="gone" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnOrderHere"
            android:layout_below="@+id/gridview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llVendor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/llOffer"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="-15dp"
                            android:background="@drawable/shape_round_top_corner"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/txtOffer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="15% OFF"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                app:font="@{`semibold`}" />

                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#ffffff"
                                app:cardCornerRadius="@dimen/dp_15">
                                <!-- style="@style/MyCardView"-->
                                <ImageView
                                    android:id="@+id/imgVendorImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="220dp"
                                    android:background="#ffffff"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_category"
                                    android:visibility="visible" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:background="#80000000" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="20dp">

                            <ImageView
                                android:id="@+id/imgBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_profile_back" />

                            <ImageView
                                android:id="@+id/imgFav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:layout_toLeftOf="@+id/imgShare"
                                android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_fav_white" />

                            <ImageView
                                android:id="@+id/imgShare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_share" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="-35dp"

                        android:orientation="vertical"
                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/shape_round_corner"
                            android:elevation="2dp"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/txtRestName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:onClick="@{(v) -> homeViewModel.clickListener(v)}"

                                    android:paddingTop="5dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="5dp"
                                    android:text="Name"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:font="@{`semibold`}" />

                                <TextView
                                    android:id="@+id/txtAddRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="right"
                                    android:layout_margin="@dimen/dp_5"
                                    android:background="@drawable/shape_round_top_corner"
                                    android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="5dp"
                                    android:text="@string/add_rating"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    app:font="@{`semibold`}" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <RatingBar
                                            android:id="@+id/rBar"
                                            style="@android:style/Widget.Material.RatingBar.Small"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:numStars="1"
                                            android:rating="0"
                                            android:theme="@style/RatingBar"
                                            android:visibility="visible" />


                                        <TextView
                                            android:id="@+id/txtRating"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="@dimen/dp_5"
                                            android:layout_toRightOf="@+id/rBar"
                                            android:text="0.0"
                                            android:textAllCaps="false"
                                            android:textColor="@color/prepColor"
                                            android:textSize="11sp"
                                            app:font="@{`regular`}" />

                                        <TextView
                                            android:id="@+id/txtRatingCount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="@dimen/dp_5"
                                            android:layout_toRightOf="@+id/txtRating"
                                            android:text="(500 Votes)"
                                            android:textAllCaps="false"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="12sp"
                                            android:visibility="gone"
                                            app:font="@{`regular`}" />


                                        <!--android:textSize="@dimen/sp_10"-->
                                    </RelativeLayout>
                                </LinearLayout>


                                <TextView
                                    android:id="@+id/txtMobNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/ic_phone_drawable"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                                    android:text="9530606006"
                                    android:textAllCaps="false"
                                    android:textColor="@color/prepColor"
                                    android:textSize="11sp"
                                    app:font="@{`regular`}" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                android:weightSum="2">


                                <TextView
                                    android:id="@+id/txtAddress"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/ic_address_drawable"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:maxLines="2"
                                    android:text="7 Phase Mohali"
                                    android:textAllCaps="false"
                                    android:textColor="@color/prepColor"
                                    android:textSize="11sp"
                                    app:font="@{`regular`}" />

                                <TextView
                                    android:id="@+id/txtDeliveryTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="0.8"
                                    android:drawableLeft="@drawable/ic_mins_drawable_sized"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:text="15 mins delivery"
                                    android:textAllCaps="false"
                                    android:textColor="@color/prepColor"
                                    android:textSize="11sp"
                                    android:visibility="visible"
                                    app:font="@{`regular`}" />


                                <!--android:textSize="@dimen/sp_10"-->
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:weightSum="2">


                                <TextView
                                    android:id="@+id/txtEmail"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.2"
                                    android:drawableLeft="@drawable/ic_email_drawable"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:text="gharu86103@gmail.com"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="12sp"
                                    app:font="@{`regular`}" />
                                <!--android:textSize="@dimen/sp_10"-->
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:weightSum="2">


                                <TextView
                                    android:id="@+id/txtTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:drawableLeft="@drawable/ic_time_drawable"
                                    android:drawablePadding="5dp"
                                    android:singleLine="true"
                                    android:text="9:00 AM-8:00 PM"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="12sp"
                                    app:font="@{`regular`}" />

                                <TextView
                                    android:id="@+id/txtTime1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:drawableLeft="@drawable/ic_time_drawable"
                                    android:drawablePadding="5dp"
                                    android:text="9:00 AM-8:00 PM"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="12sp"
                                    android:visibility="gone"
                                    app:font="@{`regular`}" />

                                <!--android:textSize="@dimen/sp_10"-->
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="15dp"

                                android:alpha="0.8"
                                android:background="@color/colorGrey" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp">

                                <ImageView
                                    android:id="@+id/imgAbout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:src="@drawable/ic_about"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/txtAboutHeading"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_toRightOf="@+id/imgAbout"
                                    android:drawableRight="@drawable/ic_down_arrow"
                                    android:onClick="@{(v) -> homeViewModel.clickListener(v)}"

                                    android:text="About restaurant's"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    app:font="@{`semibold`}" />

                                <TextView
                                    android:id="@+id/txtAbout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtAboutHeading"
                                    android:layout_gravity="right"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:layout_toRightOf="@+id/imgAbout"
                                    android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                                    android:text="About restaurant's About restaurant's About restaurant's About restaurant's About restaurant's About restaurant's About restaurant's About restaurant's About restaurant's About restaurant's About restaurant's About restaurant's About restaurant's "
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="12sp"
                                    android:visibility="gone"
                                    app:font="@{`regular`}" />

                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_round_corner_grid"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_5"
                            android:text="@string/by_services"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:font="@{`semibold`}" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"

                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="@string/quality"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            app:font="@{`regular`}" />
                        <!--   android:layout_weight="1.2"-->
                        <com.hsalf.smileyrating.SmileyRating
                            android:id="@+id/rbQuality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false" />

                        <RatingBar
                            android:id="@+id/rbQuality1"
                            style="@android:style/Widget.Material.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:numStars="5"
                            android:rating="4"
                            android:theme="@style/RatingBar"
                            android:visibility="visible" />
                        <!-- android:layout_weight="0.4"-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="@string/pack_presentation"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            app:font="@{`regular`}" />
                        <!--android:layout_weight="1.2"-->

                        <com.hsalf.smileyrating.SmileyRating
                            android:id="@+id/rbPacking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <RatingBar
                            android:id="@+id/rbPacking1"
                            style="@android:style/Widget.Material.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:numStars="5"
                            android:rating="4"
                            android:theme="@style/RatingBar"
                            android:visibility="gone" />
                        <!--android:layout_weight="0.4"-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="@string/food_quantity"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            app:font="@{`regular`}" />
                        <!--android:layout_weight="1.2"-->
                        <com.hsalf.smileyrating.SmileyRating
                            android:id="@+id/rbQunatity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <RatingBar
                            android:id="@+id/rbQunatity1"
                            style="@android:style/Widget.Material.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:numStars="5"
                            android:rating="3.5"
                            android:theme="@style/RatingBar"
                            android:visibility="gone" />
                        <!--     android:layout_weight="0.5"-->
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/foodGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_toRightOf="@+id/imgAbout"
                    android:onClick="@{(v) -> homeViewModel.clickListener(v)}"

                    android:text="Gallery"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:font="@{`semibold`}" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_jobs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layoutAnimation="@anim/layout_animation_from_bottom"
                        android:padding="@dimen/dp_5"
                        android:visibility="visible" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dp_5" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_banners"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:layout_margin="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        app:cardCornerRadius="@dimen/dp_15">


                        <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="170dp" />
                        <!--                        android:background="@drawable/ic_view_direction_back"
                        -->

                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/btnViewDirection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/ic_view_direction_back"
                        android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
                        android:text="@string/view_direction"
                        android:textAllCaps="false"
                        android:textColor="@color/viewDirectionColor"
                        app:font="@{`regular`}" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/trending_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/dp_5"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_5"
                    android:visibility="gone">

                    <TextView

                        android:id="@+id/tv_trending_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:text="@string/trending_services"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        app:font="@{`semibold`}" />

                    <TextView
                        android:id="@+id/tv_sub_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_trending_heading"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:gravity="center"
                        android:text="@string/most_booked_services_in_this_week"
                        android:textAllCaps="false"
                        android:textSize="@dimen/sp_12"
                        app:font="@{`regular`}" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@+id/tv_sub_heading"
                        android:layout_marginTop="@dimen/dp_5">

                    </androidx.viewpager.widget.ViewPager>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/offers_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/trending_layout"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/dp_5"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_5">

                    <TextView
                        android:id="@+id/tv_offers_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offers"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:font="@{`semibold`}" />

                    <TextView
                        android:id="@+id/tv_offer_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_offers_heading"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:gravity="center"
                        android:text="@string/most_booked_services_in_this_week"
                        android:textAllCaps="false"
                        android:textSize="@dimen/sp_12"
                        android:visibility="gone"
                        app:font="@{`regular`}" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_offers"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_below="@+id/tv_offers_heading"
                        android:layout_margin="@dimen/dp_5"
                        android:visibility="gone" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/offersViewpager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@+id/tv_offer_heading"
                        android:layout_marginTop="@dimen/dp_5"
                        android:visibility="gone">

                    </androidx.viewpager.widget.ViewPager>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnOrderHere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_purple"
            android:onClick="@{(v) -> homeViewModel.clickListener(v)}"
            android:text="@string/order_from_here"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            app:font="@{`regular`}" />
    </RelativeLayout>

</layout>
