    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_service_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:elevation="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_category" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_service_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/card_view"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tv_service_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Service Name"
                    android:textColor="@color/colorBlack"
                    app:font="@{`regular`}" />

                <TextView
                    android:id="@+id/tvAddRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_bg_shape_colored"
                    android:padding="@dimen/dp_5"
                    android:text="@string/rate_service"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_10"
                    android:visibility="gone"
                    app:font="@{`regular`}" />

            </RelativeLayout>

            <RatingBar
                android:id="@+id/rBar"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="-50dp"
                android:layout_marginTop="-5dp"
                android:numStars="5"
                android:rating="1"
                android:scaleX=".5"
                android:scaleY=".5"
                android:stepSize="1"
                android:theme="@style/RatingBar"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/tv_service_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/no_review"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price" />

                <TextView
                    android:id="@+id/tv_service_price_amnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="Amount"
                    android:textColor="@color/blue" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_5"
            android:text="$10"
            android:textColor="@color/colorBlack"
            app:font="@{`regular`}" />

    </RelativeLayout>
    <!-- </androidx.cardview.widget.CardView>-->
</layout>