<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_3"
    android:layout_marginTop="@dimen/dp_1"
    android:layout_marginRight="@dimen/dp_3"
    android:elevation="@dimen/dp_20"
    android:padding="@dimen/dp_5">
    <!---->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <RelativeLayout
            android:id="@+id/llTodayDeals"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/round_back_transparent"
            android:elevation="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDeal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/brthday" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#20000000" />

            <TextView
                android:id="@+id/txtDeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtCode"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="It's Your Birthday!!!"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/text_back"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Use code BIRTH100 to get Rs. 100 off"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold|italic" />
            <!---->
            <!--@color/colorLightBlue-->

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>

