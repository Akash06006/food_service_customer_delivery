<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.services.common.BindingUtils" />

        <variable
            name="homeViewModel"
            type="com.example.services.viewmodels.home.HomeViewModel" />

    </data>
    <!-- android:background="@drawable/shape_round_corner_grid"
    android:padding="@dimen/dp_5"-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_3"

        android:elevation="@dimen/dp_5">
        <!---->

        <LinearLayout
            android:id="@+id/toLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="@dimen/dp_5"
                    app:cardCornerRadius="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/cat_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_category"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:id="@+id/rlViewAll"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#50000000"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txtViewAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:singleLine="true"

                            android:text="View All"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            app:font="@{`regular`}" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <TextView
                android:id="@+id/cat_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_3"
                android:gravity="center"
                android:singleLine="true"
                android:text="Facial"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_10"
                app:font="@{`regular`}" />

        </LinearLayout>

    </RelativeLayout>

</layout>
