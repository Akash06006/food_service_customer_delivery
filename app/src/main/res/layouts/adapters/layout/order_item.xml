<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.services.common.BindingUtils" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_3"
        android:background="@drawable/shape_square_stroke"
        android:padding="@dimen/dp_10">
        <!-- android:elevation="@dimen/dp_20"-->

        <!---->
        <!--
 -->
        <LinearLayout
            android:id="@+id/service_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/dp_10"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/restImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_category" />
            </androidx.cardview.widget.CardView>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5">

                    <TextView
                        android:id="@+id/tv_cat_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_toLeftOf="@+id/tvCancel"
                        android:singleLine="true"
                        android:text="@string/services"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        app:font="@{`regular`}" />

                    <TextView
                        android:id="@+id/tvCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:background="@drawable/btn_bg_shape_colored_red"
                        android:elevation="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_3"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_3"
                        android:text="@string/cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        app:font="@{`bold`}" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_order_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_booked_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="@string/booked_on"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorGrey"
                    android:visibility="gone"
                    app:font="@{`regular`}" />

                <TextView
                    android:id="@+id/tv_order_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="8 April 2020 10:30 AM"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/prepColor"
                    android:textSize="12sp"
                    app:font="@{`regular`}" />

                <TextView
                    android:id="@+id/tv_service_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="@string/service_date"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorGrey"
                    android:visibility="gone"
                    app:font="@{`regular`}" />

                <TextView
                    android:id="@+id/tv_service_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="8 April 2020 10:30 AM"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/prepColor"
                    android:textSize="12sp"
                    app:font="@{`regular`}" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="@string/total"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorGrey"
                    android:visibility="gone"
                    app:font="@{`regular`}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:singleLine="true"
                        android:text="$100"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        app:font="@{`regular`}" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@color/colorBlack" />

                    <TextView
                        android:id="@+id/txtItemsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:singleLine="true"
                        android:text="Items: 05"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        app:font="@{`regular`}" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btnHelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/ic_help_back"
                        android:minWidth="120dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/help"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        app:font="@{`regular`}" />

                    <Button
                        android:id="@+id/btnRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_rate_back"
                        android:minWidth="120dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/rate"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        app:font="@{`regular`}" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <!-- </androidx.cardview.widget.CardView>-->

    </RelativeLayout>

</layout>
