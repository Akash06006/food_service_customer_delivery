    <LinearLayout
        android:id="@+id/service_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_square_stroke"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="@dimen/dp_5"
            app:cardCornerRadius="@dimen/dp_10">

            <ImageView
                android:id="@+id/img_cat"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:elevation="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_category" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_cat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@+id/img_favourite"
                android:singleLine="true"
                android:text="Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:font="@{`bold`}" />

            <ImageView
                android:id="@+id/imgVegNonVeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_cat_name"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@drawable/veg" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_cat_name"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@+id/img_favourite"
                android:singleLine="true"
                android:text="Duration: 2 hrs"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/prepColor"
                android:textSize="12sp"
                app:font="@{`regular`}" />

            <ImageView
                android:id="@+id/img_favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgVegNonVeg"
                android:layout_alignBottom="@+id/imgVegNonVeg"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/imgVegNonVeg"
                android:src="@drawable/ic_unfavorite" />

            <RatingBar
                android:id="@+id/rBar"
                style="@android:style/Widget.Material.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_cat_name"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:numStars="5"
                android:stepSize="0.5"
                android:theme="@style/RatingBar"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_duration"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:id="@+id/tv_offer_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="Rs.100"
                    android:textColor="@color/colorBlack"
                    app:font="@{`regular`}" />

                <RelativeLayout
                    android:id="@+id/rlOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_offer_price"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toEndOf="@+id/tv_offer_price"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_real_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs.150"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/sp_10"
                        app:font="@{`regular`}" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_alignLeft="@+id/tv_real_price"
                        android:layout_alignRight="@+id/tv_real_price"
                        android:layout_centerInParent="true"
                        android:background="@color/colorGrey" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_addCartValue"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/ic_round_back"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imgMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_minus" />
                    <!--android:background="@drawable/ic_minus_back"-->
                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        app:font="@{`regular`}"
                        tools:ignore="AllCaps" />
                    <!-- android:background="@color/colorGrey"-->
                    <!--   android:background="@drawable/ic_count_back"-->
                    <ImageView
                        android:id="@+id/imgPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_pluss" />
                    <!--android:background="@drawable/ic_plus_back"-->
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/ic_round_back"
                    android:drawableRight="@drawable/ic_pluss"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="@string/book"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_12"
                    android:visibility="visible"
                    app:font="@{`regular`}" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_offer_price"

                android:layout_alignLeft="@+id/tv_offer_price"
                android:gravity="center"
                android:text="25% Off"
                android:textColor="@color/btnBackground"
                android:visibility="gone" />
            <!--   android:layout_alignTop="@+id/tv_add"
                android:layout_alignBottom="@+id/tv_add"-->
        </RelativeLayout>
    </LinearLayout>
