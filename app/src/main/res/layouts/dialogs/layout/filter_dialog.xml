<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/colorWhite">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/imgCross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_cross_filter" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="@string/filter_title"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:layout_marginTop="5dp"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="@string/sort"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/txtPopularity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/shape_round_corner_grey"
                            android:gravity="center"
                            android:padding="@dimen/dp_10"
                            android:text="@string/popularity"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="10sp"
                            android:visibility="visible"
                            />

                        <TextView
                            android:id="@+id/txtHighLow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/shape_round_corner_grey"
                            android:gravity="center"
                            android:padding="@dimen/dp_10"
                            android:text="@string/high_to_low"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="10sp"
                            android:visibility="visible"
                            />

                        <TextView
                            android:id="@+id/txtLowHigh"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/shape_round_corner_grey"
                            android:gravity="center"
                            android:padding="@dimen/dp_10"
                            android:text="@string/low_to_high"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="10sp"
                            android:visibility="visible"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="12dp"
                        android:layout_marginTop="5dp"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="@string/rating"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        />

                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/startPoint1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:padding="@dimen/dp_5"
                            android:text="0"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:visibility="visible"
                            />

                        <TextView
                            android:id="@+id/endPoint1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:padding="@dimen/dp_5"
                            android:text="5"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:visibility="visible"
                            />

                        <SeekBar
                            android:id="@+id/seekbarRating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/startPoint1"
                            android:max="5"
                            android:minWidth="100dp"
                            android:padding="2dp"
                            android:progress="3"
                            android:progressBackgroundTint="@android:color/black"
                            android:progressTint="@color/colorPrimaryDark" />
                    </RelativeLayout>

                    <!--  <View
                              android:layout_width="0dp"
                              android:layout_height="@dimen/dp_35"
                              android:layout_weight="0.1"
                              android:visibility="invisible" />-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:layout_marginTop="5dp"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="@string/more_filters"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_5"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/txtDelUnder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:background="@drawable/shape_round_corner_grey"
                            android:gravity="center"
                            android:padding="@dimen/dp_10"
                            android:text="@string/del_under"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="10sp"
                            android:visibility="visible"
                            />

                        <TextView
                            android:id="@+id/txtGreatOffers"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/shape_round_corner_grey"
                            android:gravity="center"
                            android:padding="@dimen/dp_10"
                            android:text="@string/great_offers"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="10sp"
                            android:visibility="visible"
                            />

                        <TextView
                            android:id="@+id/txtOpenNow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_weight="0.7"
                            android:background="@drawable/shape_round_corner_grey"
                            android:gravity="center"
                            android:padding="@dimen/dp_10"
                            android:text="@string/open_now"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="10sp"
                            android:visibility="visible"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtPrevOrdered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/shape_round_corner_grey"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="@string/previously_ordered"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="10sp"
                        android:visibility="visible"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:layout_marginTop="5dp"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="@string/distance"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        />

                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/startPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:padding="@dimen/dp_5"
                            android:text="0 km"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:visibility="visible"
                            />

                        <TextView
                            android:id="@+id/endPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:padding="@dimen/dp_5"
                            android:text="20 km"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:visibility="visible"
                            />

                        <SeekBar
                            android:id="@+id/seekbarDistance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/startPoint"
                            android:max="20"
                            android:minWidth="100dp"
                            android:padding="3dp"
                            android:progress="10"
                            android:progressBackgroundTint="@android:color/black"
                            android:progressTint="@color/colorPrimaryDark" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnApply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/shape_round_stroke"
                        android:elevation="@dimen/dp_15"
                        android:gravity="center"
                        android:text="@string/apply_filter"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        />

                    <Button
                        android:id="@+id/btnClear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:background="@drawable/shape_round_stroke"
                        android:gravity="center"
                        android:text="@string/clear_filters"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        />


                    <!--  <View
                              android:layout_width="0dp"
                              android:layout_height="@dimen/dp_40"
                              android:layout_weight="0.1"
                              android:visibility="invisible" />-->

                </LinearLayout>
            </ScrollView>

        </FrameLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:layout_gravity="top|center"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/ic_app"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>
