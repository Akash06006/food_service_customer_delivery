<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:elevation="@dimen/dp_10"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:gravity="center"
                    android:text="For a month"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:font="@{`bold`}" />

                <TextView
                    android:id="@+id/tvFromDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center"
                    android:text="For a month"
                    android:textColor="@color/colorGrey"
                    android:textSize="12sp"
                    app:font="@{`regular`}" />

                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="For a month"
                    android:textColor="@color/colorGrey"
                    android:textSize="12sp"
                    app:font="@{`regular`}" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/rounded_rectangle_pink"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="Price:Rs 800"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:font="@{`regular`}" />

                <TextView
                    android:id="@+id/tvBenefits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center"
                    android:text="Benefits"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    app:font="@{`bold`}" />

                <TextView
                    android:id="@+id/tvBenefitsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:text="Benefits"
                    android:textColor="@color/colorGrey"
                    android:textSize="12sp"
                    app:font="@{`Regular`}" />

                <Button
                    android:id="@+id/btnPayNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/shape_purple"
                    android:text="Pay Now"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvCurrentPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:gravity="center"
                    android:text="View Current Plan"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    app:font="@{`Regular`}" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>
