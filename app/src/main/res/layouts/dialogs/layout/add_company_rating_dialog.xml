<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
        <!--android:background="@drawable/back_image"-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/txtCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="@dimen/dp_10"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="Comapny Name"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:visibility="visible"
                        app:font="@{`bold`}" />

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="7 Phase Mohali"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_weight="0.1"
                        android:background="@color/colorBlack"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RatingBar
                            android:id="@+id/rb_ratings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:numStars="5"
                            android:progressTint="@color/colorGolden"
                            android:rating="1"
                            android:stepSize="0.5"
                            android:theme="@style/RatingBar" />

                        <com.hsalf.smileyrating.SmileyRating
                            android:id="@+id/rb_ratings1"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/shape_round_corner_grid"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/quality"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack" />
                                <!--   android:layout_weight="1.2"-->
                                <RatingBar
                                    android:id="@+id/rbQuality"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="5dp"
                                    android:numStars="5"
                                    android:progressTint="@color/colorGolden"
                                    android:rating="1"
                                    android:stepSize="0.5"
                                    android:theme="@style/RatingBar" />

                                <com.hsalf.smileyrating.SmileyRating
                                    android:id="@+id/rbQuality1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />
                                <!-- android:layout_weight="0.4"-->
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"

                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/pack_presentation"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack" />
                                <!--android:layout_weight="1.2"-->
                                <com.hsalf.smileyrating.SmileyRating
                                    android:id="@+id/rbPacking1"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />

                                <RatingBar
                                    android:id="@+id/rbPacking"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="5dp"
                                    android:numStars="5"
                                    android:progressTint="@color/colorGolden"
                                    android:rating="1"
                                    android:saveEnabled="true"
                                    android:stepSize="0.5"
                                    android:theme="@style/RatingBar" />
                                <!--                                    style="@android:style/Widget.Material.RatingBar.Small"
-->
                                <!--android:layout_weight="0.4"-->
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"

                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/food_quantity"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack" />
                                <!--android:layout_weight="1.2"-->

                                <com.hsalf.smileyrating.SmileyRating
                                    android:id="@+id/rbQunatity1"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />

                                <RatingBar
                                    android:id="@+id/rbQunatity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="5dp"
                                    android:numStars="5"
                                    android:progressTint="@color/colorGolden"
                                    android:rating="1"
                                    android:stepSize="0.5"
                                    android:theme="@style/RatingBar" />
                                <!--     android:layout_weight="0.5"-->
                            </LinearLayout>
                        </LinearLayout>


                        <EditText
                            android:id="@+id/et_review"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_150"
                            android:layout_margin="@dimen/dp_5"
                            android:background="@drawable/shape_round_corner"
                            android:elevation="@dimen/dp_2"
                            android:gravity="top"
                            android:hint="@string/enter_review"
                            android:imeOptions="actionDone"
                            android:minHeight="@dimen/dp_150"
                            android:padding="@dimen/dp_10"
                            android:textColorHint="@color/colorGrey" />

                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/dp_20"
                            android:background="@drawable/btn_bg_shape_colored"
                            android:elevation="@dimen/dp_5"
                            android:text="@string/submit"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            app:font="@{`bold`}" />

                    </LinearLayout>


                    <!--  <View
                              android:layout_width="0dp"
                              android:layout_height="@dimen/dp_35"
                              android:layout_weight="0.1"
                              android:visibility="invisible" />-->


                    <!--  <View
                              android:layout_width="0dp"
                              android:layout_height="@dimen/dp_40"
                              android:layout_weight="0.1"
                              android:visibility="invisible" />-->

                </LinearLayout>


            </RelativeLayout>
        </ScrollView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:layout_gravity="top|center"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/ic_app"
            android:visibility="gone" />

    </FrameLayout>
</layout>
