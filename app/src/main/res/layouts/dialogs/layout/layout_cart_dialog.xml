<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.services.common.BindingUtils" />

    </data>

    <RelativeLayout
        android:id="@+id/layoutBottomSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#50000000"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/ll_slots"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/texture_back"
            android:elevation="@dimen/dp_10"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:paddingBottom="10dp"
            android:visibility="visible">


            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="end">

                <ImageView
                    android:id="@+id/img_cross"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:backgroundTint="@color/colorBlack"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_black_cross" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="false"
                    app:lottie_rawRes="@raw/cart_success" />
            </RelativeLayout>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rd_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:checked="true"
                    android:text="@string/visit_shop" />

                <RadioButton
                    android:id="@+id/rd_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:backgroundTint="@color/colorWhite"
                    android:text="@string/at_home" />
            </RadioGroup>


            <LinearLayout
                android:id="@+id/llCartDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/txtQuote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/cart_quotes"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:font="@{`betty`}"
                    tools:ignore="AllCaps" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:text="Select Quantity"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_minus_back"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_minus" />

                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/colorGrey"
                        android:gravity="center"
                        android:text="0"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:font="@{`regular`}"
                        tools:ignore="AllCaps" />
                    <!--   android:background="@drawable/ic_count_back"-->
                    <ImageView
                        android:id="@+id/imgPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_plus_back"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_plus" />
                    <!--android:background="@drawable/ic_plus_back"-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center"
                        android:text="@string/price_colon"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        app:font="@{`bold`}"
                        tools:ignore="AllCaps" />

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center"
                        android:text="@string/price"
                        android:textAllCaps="false"
                        android:textColor="@color/colorSuccess"
                        android:textStyle="bold"
                        app:font="@{`bold`}"
                        tools:ignore="AllCaps" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvSelectdateMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/when_do_you_want_this_service"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:visibility="gone"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvDateRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/no_date_slots_available"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:visibility="gone"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />


                <TextView
                    android:id="@+id/tv_timeSlots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/select_time"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:visibility="gone"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_slots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvNoRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/no_time_slots_available"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:visibility="gone"
                    app:font="@{`bold`}"
                    tools:ignore="AllCaps" />


                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/btn_bg_shape_colored"
                    android:text="@string/proceed"
                    android:textColor="@color/colorWhite"
                    android:visibility="visible"
                    app:font="@{`bold`}" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="false"
                    app:lottie_rawRes="@raw/add_cart_success" />
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>
</layout>