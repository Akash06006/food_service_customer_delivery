<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.services.common.BindingUtils" />

        <variable
            name="reviewsViewModel"
            type="com.example.services.viewmodels.ratingreviews.RatingReviewsViewModel" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/colorWhite"
        android:orientation="vertical"
        app:hideKeyBoardOnClick="@{`back`}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/ic_pink_rounded_back">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:onClick="@{(v) -> reviewsViewModel.clickListener(v)}"
                android:src="@drawable/ic_profile_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/imgBack"
                android:text="@string/review_rating"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:font="@{`bold`}" />
        </RelativeLayout>

        <include

            android:id="@+id/common_tool_bar"
            layout="@layout/common_toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(v) -> reviewsViewModel.clickListener(v)}"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_2"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_no_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/no_record_found"
                    android:visibility="gone"
                    app:font="@{`regular`}" />

                <TextView
                    android:id="@+id/txtItemsRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_items_rating"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:font="@{`bold`}" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtItemsRating"
                    android:layout_marginTop="5dp"
                    android:padding="@dimen/dp_5" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rv_reviews"
                    android:layout_marginTop="10dp"
                    android:elevation="2dp"
                    app:cardCornerRadius="@dimen/dp_10">

                    <LinearLayout
                        android:id="@+id/llRest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_rest_rating"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:font="@{`bold`}" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_view1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/dp_10">

                                <ImageView
                                    android:id="@+id/imgRest"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerVertical="true"
                                    android:elevation="@dimen/dp_5"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_category" />
                            </androidx.cardview.widget.CardView>

                            <RelativeLayout
                                android:id="@+id/ll_service_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp">

                                <TextView
                                    android:id="@+id/txtRestname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Restaurant Name"
                                    android:textColor="@color/colorBlack"
                                    app:font="@{`regular`}" />

                                <RatingBar
                                    android:id="@+id/rBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="44dp"
                                    android:layout_below="@+id/tv_service_name"
                                    android:layout_marginLeft="-60dp"
                                    android:layout_marginTop="10dp"
                                    android:numStars="5"
                                    android:rating="1"
                                    android:scaleX=".5"
                                    android:scaleY=".5"
                                    android:stepSize="1"
                                    android:theme="@style/RatingBar"
                                    tools:ignore="UnusedAttribute" />
                            </RelativeLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="@string/quality"
                                android:textColor="@color/purple"
                                android:textSize="15sp"
                                app:font="@{`regular`}" />

                            <RatingBar
                                android:id="@+id/rbQuality"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:layout_below="@+id/tv_service_name"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="-5dp"
                                android:numStars="5"
                                android:rating="1"
                                android:scaleX=".5"
                                android:scaleY=".5"
                                android:stepSize="1"
                                android:theme="@style/RatingBar"
                                tools:ignore="UnusedAttribute" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="Packing"
                                android:textColor="@color/purple"
                                android:textSize="15sp"
                                app:font="@{`regular`}" />

                            <RatingBar
                                android:id="@+id/rbPackaging"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="-5dp"
                                android:numStars="5"
                                android:rating="1"
                                android:scaleX=".5"
                                android:scaleY=".5"
                                android:stepSize="1"
                                android:theme="@style/RatingBar"
                                tools:ignore="UnusedAttribute" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="Value for money"
                                android:textColor="@color/purple"
                                android:textSize="15sp"
                                app:font="@{`regular`}" />

                            <RatingBar
                                android:id="@+id/rbMoneyValue"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="-5dp"
                                android:gravity="end"
                                android:numStars="5"
                                android:rating="1"
                                android:scaleX=".5"
                                android:scaleY=".5"
                                android:stepSize="1"
                                android:theme="@style/RatingBar"
                                tools:ignore="UnusedAttribute" />
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/edtReviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/shape_back"
                            android:gravity="start"
                            android:hint="@string/write_thoughts"
                            android:maxLines="4"
                            android:minLines="3"
                            android:padding="5dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            app:font="@{`regular`}" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/add_images"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:font="@{`bold`}" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_images"
                                android:layout_width="wrap_content"
                                android:layout_height="85dp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/colorPrimary"
                                app:cardCornerRadius="@dimen/dp_10">

                                <LinearLayout
                                    android:id="@+id/imgAddImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@color/colorPrimary"
                                    android:gravity="center"
                                    android:onClick="@{(v) -> reviewsViewModel.clickListener(v)}"
                                    android:orientation="horizontal">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableTop="@drawable/ic_plus_white"
                                        android:text="@string/add"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="16sp"
                                        app:font="@{`regular`}" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_20"
                            android:background="@drawable/shape_purple"
                            android:onClick="@{(v) -> reviewsViewModel.clickListener(v)}"
                            android:text="@string/submit"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/buttonTextColor"
                            android:textStyle="bold"
                            app:font="@{`bold`}" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </RelativeLayout>
        </ScrollView>


    </LinearLayout>

</layout>
