<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.services.common.BindingUtils" />

        <variable
            name="cartViewModel"
            type="com.example.services.viewmodels.orders.OrdersViewModel" />

        <variable
            name="detailModel"
            type="com.example.services.model.orders.OrdersDetailResponse.Body" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include

            android:id="@+id/common_tool_bar"
            layout="@layout/common_toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(v) -> cartViewModel.clickListener(v)}" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="vertical">

                <!-- <TextView
                         android:id="@+id/tv_no_record"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerInParent="true"
                         android:text="@string/no_record_found"
                         android:visibility="gone" />-->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imgVendorImage"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@{detailModel.company.logo1!=null ?  detailModel.company.logo1.toString():@string/todo,default=@drawable/ic_category}"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="-25dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/shape_round_corner_grid"
                        android:elevation="2dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtCompanyName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:paddingBottom="10dp"
                                android:text="Company Name"
                                android:textAllCaps="false"
                                android:textColor="@color/colorBlack"
                                android:textSize="16sp"
                                android:visibility="visible" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_below="@+id/txtCompanyName"
                                android:layout_alignStart="@+id/txtCompanyName"
                                android:layout_alignEnd="@+id/txtCompanyName"
                                android:layout_marginStart="5dp"
                                android:background="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/btnReorder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_5"
                                android:background="@drawable/round_red_shape"
                                android:elevation="@dimen/dp_3"
                                android:onClick="@{(v) -> cartViewModel.clickListener(v)}"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_5"
                                android:paddingRight="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_5"
                                android:text="Re Order"
                                android:textColor="@color/white"
                                android:visibility="gone" />


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.2">


                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">


                                    <RatingBar
                                        android:id="@+id/rBar"
                                        style="@android:style/Widget.Material.RatingBar.Small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:numStars="1"
                                        android:rating="0"
                                        android:theme="@style/RatingBar"
                                        android:visibility="visible" />


                                    <TextView
                                        android:id="@+id/txtRating"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:layout_toRightOf="@+id/rBar"
                                        android:text="0.0"
                                        android:textAllCaps="false"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/txtRatingCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:layout_toRightOf="@+id/txtRating"
                                        android:text="(500 Votes)"
                                        android:textAllCaps="false"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="12sp"
                                        android:visibility="gone" />


                                    <!--android:textSize="@dimen/sp_10"-->
                                </RelativeLayout>
                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/txtMobNumber"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:drawableLeft="@drawable/ic_phone_drawable"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:text="9530606006"
                                android:textAllCaps="false"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtAbout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:drawableLeft="@drawable/ic_about_drawable"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:text="About Us"
                                android:textAllCaps="false"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                            <!--android:textSize="@dimen/sp_10"-->
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/txtEmail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:drawableLeft="@drawable/ic_email_drawable"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:text="gharu86103@gmail.com"
                                android:textAllCaps="false"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:drawableLeft="@drawable/ic_time_drawable"
                                android:drawablePadding="5dp"
                                android:text="9:00 AM-8:00 PM"
                                android:textAllCaps="false"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp" />

                            <!--android:textSize="@dimen/sp_10"-->
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="@dimen/dp_5"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:text="@{detailModel.company.address1}"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/animationPending"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:visibility="gone"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/pending" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/animationConfirmed"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:visibility="gone"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/confirmed" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/animationCancelled"
                            android:layout_width="100dp"
                            android:layout_height="100dp"

                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:visibility="gone"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/order_cancel" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/animationCooking"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:visibility="gone"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/cooking_status" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/animationPacked"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:visibility="gone"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/packed" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/animationOutDelivery"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:visibility="gone"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/on_the_way" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/animationWaitingForCustomer"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:visibility="gone"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/customer_waiting" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:singleLine="true"
                            android:text="Order Status:"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@android:color/black"
                            app:font="@{`bold`}" />

                        <TextView
                            android:id="@+id/txtCurrentStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:maxWidth="200dp"
                            android:text="Name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:font="@{`bold`}" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layoutAnimation="@anim/layout_animation_from_left"
                        android:nestedScrollingEnabled="false" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_service_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:singleLine="true"
                            android:text="@string/service_date"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp"
                            app:font="@{`regular`}" />

                        <TextView
                            android:id="@+id/tv_service_on"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_5"
                            android:singleLine="true"
                            android:text="8 April 2020 10:30 AM"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp"
                            app:font="@{`regular`}" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_booked_on"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:singleLine="true"
                            android:text="@string/booked_on"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp"
                            app:font="@{`regular`}" />

                        <TextView
                            android:id="@+id/tv_order_on"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_5"
                            android:singleLine="true"
                            android:text="8 April 2020 10:30 AM"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp"
                            app:font="@{`regular`}" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:singleLine="true"
                    android:text="@string/total"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorGrey"
                    app:font="@{`regular`}" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:singleLine="true"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorBlack"
                    app:font="@{`regular`}" />

                <LinearLayout
                    android:id="@+id/driverDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:singleLine="true"
                            android:text="@string/delivery_partner_detail"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:font="@{`bold`}" />

                        <TextView
                            android:id="@+id/txtTrackOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:background="@drawable/shape_round_top_corner"
                            android:onClick="@{(v) -> cartViewModel.clickListener(v)}"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="5dp"
                            android:singleLine="true"
                            android:text="Track Order"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:font="@{`bold`}" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5">

                        <ImageView
                            android:id="@+id/imgDriver"
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_70"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_person" />

                        <TextView
                            android:id="@+id/txtDriverName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_toRightOf="@+id/imgDriver"
                            android:singleLine="true"
                            android:text="Name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@android:color/black"
                            app:font="@{`bold`}" />

                        <RatingBar
                            android:id="@+id/rbDriver"
                            style="@android:style/Widget.Material.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtDriverName"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_toRightOf="@+id/imgDriver"
                            android:numStars="1"
                            android:rating="0"
                            android:theme="@style/RatingBar"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/txtDriverRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtDriverName"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_toRightOf="@+id/rbDriver"
                            android:text="(0)"
                            android:textAllCaps="false"
                            android:textSize="@dimen/sp_10" />

                        <TextView
                            android:id="@+id/txtPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rbDriver"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"

                            android:layout_toRightOf="@+id/imgDriver"
                            android:drawableLeft="@drawable/ic_phone_drawable"
                            android:drawablePadding="5dp"
                            android:onClick="@{(v) -> cartViewModel.clickListener(v)}"
                            android:singleLine="true"
                            android:text="phone"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@android:color/black"
                            app:font="@{`bold`}" />

                        <TextView
                            android:id="@+id/txtTotalOrders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rbDriver"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:drawablePadding="5dp"
                            android:onClick="@{(v) -> cartViewModel.clickListener(v)}"
                            android:singleLine="true"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_10"
                            app:font="@{`bold`}" />


                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnComplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@drawable/shape_round_stroke"
                        android:onClick="@{(v) -> cartViewModel.clickListener(v)}"
                        android:text="@string/complete_order"
                        android:textColor="@color/buttonTextColor"
                        android:visibility="visible"
                        app:font="@{`bold`}" />
                </LinearLayout>


            </LinearLayout>


        </ScrollView>
    </LinearLayout>
</layout>
