<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="tiffinMainViewModel"
            type="com.example.services.viewmodels.tiffinViewModel.TiffinViewModel" />

    </data>

    <ScrollView
        android:id="@+id/details_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey3">

        <ImageView
            android:id="@+id/img_order_details"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_231dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image" />

        <androidx.cardview.widget.CardView
            android:id="@+id/detailsCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_154"
            android:layout_marginTop="@dimen/dp_177"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            app:cardCornerRadius="@dimen/dp_6"
            android:elevation="@dimen/dp_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_20dp">

                <TextView
                    android:id="@+id/tv_detailsTiffinName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A1 Tiffin Services"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_20"/>

                <ImageView
                    android:id="@+id/detailsItemTypeImage"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:src="@drawable/ic_combined_shape"
                    android:layout_toRightOf="@id/tv_detailsTiffinName"
                    android:layout_marginLeft="@dimen/dp_13"/>

                <ImageView
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:src="@drawable/ic_combined_shape_2"
                    android:layout_toRightOf="@id/detailsItemTypeImage"
                    android:layout_marginLeft="@dimen/dp_5"/>

                <TextView
                    android:id="@+id/detailsTvPackages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_below="@id/tv_detailsTiffinName"
                    android:text="Breakfast, Lunch, Dinner"/>

                <ImageView
                    android:id="@+id/detailsLine1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_details_small_line"
                    android:layout_below="@id/detailsTvPackages"
                    android:layout_marginTop="@dimen/dp_7" />

                <ImageView
                    android:id="@+id/details_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star"
                    android:layout_below="@id/detailsLine1"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginLeft="@dimen/dp_3" />

                <TextView
                    android:id="@+id/detailsratingValuetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detailsLine1"
                    android:layout_toRightOf="@id/details_star"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="4.1"/>

                <TextView
                    android:id="@+id/detailsratingstv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detailsLine1"
                    android:layout_toRightOf="@id/detailsratingValuetv"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/ratings"/>

                <TextView
                    android:id="@+id/ratingsTotalOrderstv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detailsLine1"
                    android:layout_toRightOf="@id/detailsratingstv"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text=". 500+"/>

                <ImageView
                    android:id="@+id/img_details_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_time"
                    android:layout_below="@id/details_star"
                    android:layout_marginTop="@dimen/dp_5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 minutes (Delivery Time)"
                    android:layout_below="@id/details_star"
                    android:layout_toRightOf="@id/img_details_time"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_7"/>




            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/white"
            android:layout_below="@id/detailsCard"
            android:padding="@dimen/dp_15">

            <TextView
                android:id="@+id/detailsMenuTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detailsMenuTv"
                android:textSize="@dimen/dp_14"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/detailsDownArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down_arrow"
                android:background="@color/colorWhite"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/detailsLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_details_line"
                android:layout_below="@id/detailsDownArrow"
                android:layout_marginTop="@dimen/dp_15"/>

            <TextView
                android:id="@+id/deliveryTimingsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:text="@string/deliveryTimingsTv"
                android:layout_below="@id/detailsLine2"
                android:layout_marginTop="@dimen/dp_20"/>

            <LinearLayout
                android:id="@+id/ll_detailsEatTimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/deliveryTimingsTv">

            <TextView
                android:id="@+id/detailsBreakfastTv"
                android:layout_width="@dimen/dimen_112dp"
                android:layout_height="@dimen/dimen_30dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_11"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@drawable/ic_breakfast_details"
                android:text="@string/breakfast"/>

            <TextView
                android:id="@+id/detailsLunchfastTv"
                android:layout_width="@dimen/dimen_112dp"
                android:layout_height="@dimen/dimen_30dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_11"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@drawable/ic_breakfast_details"
                android:text="@string/lunch"/>

            <TextView
                android:id="@+id/detailsDinnerfastTv"
                android:layout_width="@dimen/dimen_112dp"
                android:layout_height="@dimen/dimen_30dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_11"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@drawable/ic_breakfast_details"
                android:text="@string/dinner"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_detailsEatTimes2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/ll_detailsEatTimes">

                <TextView
                    android:id="@+id/detailsBreakfastTv2"
                    android:layout_width="@dimen/dimen_112dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:textSize="@dimen/sp_8"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_breakfast_details2"
                    android:text="@string/breakfastTime"/>

                <TextView
                    android:id="@+id/detailsLunchfastTv2"
                    android:layout_width="@dimen/dimen_112dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:textSize="@dimen/sp_8"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_breakfast_details2"
                    android:text="@string/lunchTime"/>

                <TextView
                    android:id="@+id/detailsDinnerfastTv2"
                    android:layout_width="@dimen/dimen_112dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:textSize="@dimen/sp_8"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_breakfast_details2"
                    android:text="@string/dinnerTime"/>

            </LinearLayout>

            <TextView
                android:id="@+id/detailsPackagesTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filterPackages"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:layout_below="@id/ll_detailsEatTimes2"
                android:layout_marginTop="@dimen/dp_10"/>

            <LinearLayout
                android:id="@+id/ll_details_final_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsPackagesTv">

            <LinearLayout
                android:id="@+id/ll_detailsPackages"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_100"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"/>

            <TextView
                android:id="@+id/radioButtonTv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filterDaily"
                android:layout_weight="1"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/detailsTiffinTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tiffinFor"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dp_10"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <RadioButton
                        android:id="@+id/radiodetailsTiffin1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:checked="true"/>

                    <TextView
                        android:id="@+id/radiodetailsTiffinTv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/breakfast"
                        android:layout_marginTop="@dimen/dp_10"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_detailsPackages2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_100"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/radioButtonTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filterWeekly"
                    android:layout_weight="1"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/radiodetailsTiffin2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:checked="true"/>

                    <TextView
                        android:id="@+id/radiodetailsTiffinTv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lunch"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_detailsPackages3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_100"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/radioButtonTv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filterMonthly"
                    android:layout_weight="1"/>



            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radiodetailsTiffin3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>

                    <TextView
                        android:id="@+id/radiodetailsTiffinTv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dinner"/>

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>









            <LinearLayout
                android:id="@+id/ll_start_date_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_80"
                android:orientation="vertical"
                android:layout_below="@id/ll_details_final_parent"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/startDate"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:padding="@dimen/dp_5"
                    android:textSize="@dimen/sp_14"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Select Date"
                    android:layout_weight="3"
                    android:textSize="@dimen/sp_14"
                    android:padding="@dimen/dp_5"
                    android:drawableRight="@drawable/ic_calendar"
                    android:background="@drawable/ic_form_bg_cal"
                    android:paddingRight="@dimen/dp_20"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_start_date_price2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_80"
                android:orientation="vertical"
                android:layout_below="@id/ll_details_final_parent"
                android:layout_toRightOf="@id/ll_start_date_price"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:padding="@dimen/dp_5"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_14"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/ic_form_bg_cal"
                    android:textSize="@dimen/sp_14"/>

            </LinearLayout>




            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_46"
                android:src="@drawable/ic_bg_2"
                android:text="@string/proceed"
                android:textColor="@color/white"
                android:background="@drawable/ic_bg_2"
                android:layout_below="@id/ll_start_date_price2"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_alignParentBottom="true"/>



        </RelativeLayout>


    </RelativeLayout>

    </ScrollView>


</layout>
