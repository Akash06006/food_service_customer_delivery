<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.services.common.BindingUtils" />

        <variable
            name="myaccountsViewModel"
            type="com.example.services.viewmodels.MyAccountsViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<include
                android:id="@+id/toolbarCommon"
                layout="@layout/common_toolbar_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />-->

            <RelativeLayout
                android:id="@+id/toolbarCommon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@drawable/ic_purple_rounded_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:onClick="@{(v) -> myaccountsViewModel.clickListener(v)}"
                    android:src="@drawable/ic_profile_back" />


            </RelativeLayout>

            <TextView
                android:id="@+id/txtSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:text="@string/settings"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:font="@{`bold`}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbarCommon"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:id="@+id/const_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSettings">

                <RelativeLayout
                    android:id="@+id/tv_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{(v) -> myaccountsViewModel.clickListener(v)}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:drawableLeft="@drawable/ic_terms"
                        android:drawablePadding="10dp"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_15"
                        android:text="@string/terms_condition"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14"
                        app:font="@{`bold`}"
                        tools:ignore="RtlSymmetry" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_right" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@color/colorGrey1" />

                <RelativeLayout
                    android:id="@+id/tv_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{(v) -> myaccountsViewModel.clickListener(v)}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:drawableLeft="@drawable/ic_privacy_policy"
                        android:drawablePadding="10dp"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_15"
                        android:text="@string/privacy_policy"
                        android:textAllCaps="false"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        app:font="@{`bold`}"
                        tools:ignore="RtlSymmetry" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_right" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@color/colorGrey1" />

                <RelativeLayout
                    android:id="@+id/tv_faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{(v) -> myaccountsViewModel.clickListener(v)}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:drawableLeft="@drawable/ic_faq"
                        android:drawablePadding="10dp"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_15"
                        android:text="@string/faq"
                        android:textAllCaps="true"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        app:font="@{`bold`}"
                        tools:ignore="RtlSymmetry" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_right" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_faq"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@color/colorGrey1" />

                <RelativeLayout
                    android:id="@+id/tv_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{(v) -> myaccountsViewModel.clickListener(v)}">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:drawableLeft="@drawable/ic_feedback"
                        android:drawablePadding="10dp"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_15"
                        android:text="@string/feedback"
                        android:textAllCaps="false"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        app:font="@{`bold`}"
                        tools:ignore="RtlSymmetry" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_right" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_help"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@color/colorGrey1" />

                <RelativeLayout
                    android:id="@+id/tv_contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{(v) -> myaccountsViewModel.clickListener(v)}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:drawableLeft="@drawable/ic_contact"
                        android:drawablePadding="10dp"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_15"
                        android:text="@string/contact_us"
                        android:textAllCaps="false"
                        android:textColor="@color/colorblack"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        app:font="@{`bold`}"
                        tools:ignore="RtlSymmetry" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_right" />

                </RelativeLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</layout>