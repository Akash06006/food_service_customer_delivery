<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.services.model.tiffinModel.TiffinMainList" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_marginRight="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_5"
        android:elevation="@dimen/dp_20"
        android:padding="@dimen/dp_5"
        android:gravity="center_horizontal">
        <!---->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="@dimen/dp_5"
            android:background="@drawable/ic_rectangle_ordershistory"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ordershistFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="@dimen/sp_14"
                    android:padding="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/ordershistStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ordershistFood"
                    android:text="Completed"
                    android:textColor="@color/colorhiliteGreen"
                    android:textSize="@dimen/sp_14"
                    android:padding="@dimen/dp_15"/>

                <ImageView
                    android:id="@+id/ordershistLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ordershistStatus"
                    android:src="@drawable/orders_hist_line"/>

                <ImageView
                    android:id="@+id/foodImage"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:layout_below="@id/ordershistLine"
                    android:src="@mipmap/burger_foreground"
                    android:layout_marginTop="@dimen/dp_12"/>

                <TextView
                    android:id="@+id/foodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    android:layout_below="@id/ordershistLine"
                    android:layout_toRightOf="@id/foodImage"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="Maharaja Mac"/>

                <TextView
                    android:id="@+id/foodDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:layout_below="@id/foodName"
                    android:layout_toRightOf="@id/foodImage"
                    android:paddingLeft="@dimen/dp_12"
                    android:text="2 Km Away"/>

                <TextView
                    android:id="@+id/foodOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:layout_below="@id/foodDistance"
                    android:layout_toRightOf="@id/foodImage"
                    android:paddingLeft="@dimen/dp_12"
                    android:text="Ordered on 30 July 2020"/>

                <ImageView
                    android:id="@+id/ordershistSmallLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/foodOrderDate"
                    android:layout_toRightOf="@id/foodImage"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_2"
                    android:src="@drawable/ic_line_small_orders_hist"/>

                <TextView
                    android:id="@+id/foodOrderPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/colorhiliteGreen"
                    android:layout_below="@id/ordershistSmallLine"
                    android:layout_toRightOf="@id/foodImage"
                    android:paddingLeft="@dimen/dp_12"
                    android:text="$ 10.10"/>

                <TextView
                    android:id="@+id/foodOrderPriceNoOfItems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:layout_below="@id/ordershistSmallLine"
                    android:layout_toRightOf="@id/foodOrderPrice"
                    android:paddingLeft="@dimen/dp_12"
                    android:text="3 Items"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/foodImage"
                    android:layout_marginTop="@dimen/dp_15">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rate_rectangle_orders"
                    android:text="Rate"
                    android:textSize="@dimen/sp_14"
                    android:textAllCaps="false"
                    android:layout_weight="@integer/int_1"
                    android:layout_margin="@dimen/dp_13"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/reorder_reactangle_orders"
                        android:text="Re-Order"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:textAllCaps="false"
                        android:layout_weight="@integer/int_1"
                        android:layout_margin="@dimen/dp_13"/>

                </LinearLayout>




            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>
