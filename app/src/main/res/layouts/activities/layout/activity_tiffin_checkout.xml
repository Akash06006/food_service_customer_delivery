<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="tiffinMainViewModel"
            type="com.example.services.viewmodels.tiffinViewModel.TiffinViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_18">

    <TextView
        android:id="@+id/myCheckoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_20"
        android:text="@string/myCheckoutTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/myCheckoutBackButton"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:src="@drawable/ic_back"
        android:layout_marginTop="@dimen/dp_10"/>



    <TextView
        android:id="@+id/deliveryAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deliveryAddress"
        android:textSize="@dimen/sp_12"
        android:layout_below="@id/myCheckoutBackButton"
        android:layout_marginTop="@dimen/dp_20"/>

    <TextView
        android:id="@+id/deliveryAddressTv"
        android:layout_width="@dimen/dp_233"
        android:layout_height="wrap_content"
        android:layout_below="@id/deliveryAddress"
        android:layout_marginTop="@dimen/dp_2"
        android:text="C-138, Phase 8, Industrial Area, Mohali, 166071, Punjab"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/checkoutChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkoutChange"
        android:layout_below="@id/deliveryAddress"
        android:textColor="@color/colorhiliteGreen"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_alignParentRight="true"/>


    <ImageView
        android:id="@+id/checkoutLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"
        android:layout_below="@id/deliveryAddressTv"
        android:layout_marginTop="@dimen/dp_14"/>


    <RelativeLayout
        android:id="@+id/rl_checkoutItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkoutLine1"
        android:layout_marginTop="@dimen/dp_19">

        <TextView
            android:id="@+id/checkoutPaymentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_method"/>

        <TextView
            android:id="@+id/checkoutAddItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorhiliteGreen"
            android:text="@string/addPlus"
            android:layout_alignParentRight="true" />

        <LinearLayout
            android:id="@+id/ll_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/checkoutPaymentTv"
            android:background="@drawable/ic_back_transparent_check"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/checkoutImgCardType"
            android:layout_width="@dimen/dimen_18dp"
            android:layout_height="@dimen/dimen_18dp"
            android:src="@drawable/ic_visa_1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_18dp"
            android:layout_below="@id/checkoutPaymentTv"
            android:layout_marginLeft="@dimen/dp_20"
            android:inputType="number"
            android:background="@drawable/round_back_transparent"
            android:layout_toRightOf="@id/checkoutImgCardType"
            android:hint="xxxx.xxxx.xxxx.9365"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_payPal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/ll_card"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/ic_back_transparent_check"
            android:gravity="center_vertical">

        <ImageView
            android:id="@+id/checkoutImgPayPal"
            android:layout_width="@dimen/dimen_18dp"
            android:layout_height="@dimen/dimen_18dp"
            android:src="@drawable/ic_paypal_1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_18dp"
                android:layout_below="@id/checkoutPaymentTv"
                android:layout_marginLeft="@dimen/dp_20"
                android:inputType="number"
                android:background="@drawable/round_back_transparent"
                android:layout_toRightOf="@id/checkoutImgCardType"
                android:text="dummy@gmail.com"
                android:layout_weight="9"/>
            <ImageView
                android:id="@+id/emailVerifyIcon"
                android:layout_width="@dimen/dimen_18dp"
                android:layout_height="@dimen/dimen_18dp"
                android:src="@drawable/ic_group"
                android:layout_weight="1"/>

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/checkoutLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"
        android:layout_below="@id/rl_checkoutItems"
        android:layout_marginTop="@dimen/dp_14"/>


    <EditText
        android:id="@+id/checkoutAddMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkoutLine2"
        android:layout_alignParentRight="true"
        android:text="HUNGRY10"
        android:textAllCaps="true"
        android:gravity="right"
        android:background="@drawable/round_back_transparent"
        android:textColor="@color/colorhiliteGreen"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_15"/>

    <TextView
        android:id="@+id/checkoutInstrucTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkoutLine2"
        android:text="@string/enterCoupon"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_15"/>

    <ImageView
        android:id="@+id/checkoutLine3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"
        android:layout_below="@id/checkoutInstrucTv"
        android:layout_marginTop="@dimen/dp_14"/>

    <TextView
        android:id="@+id/summayTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/summayTv"
        android:textStyle="bold"
        android:layout_below="@id/checkoutLine3"
        android:layout_marginTop="@dimen/dp_15"/>


    <ImageView
        android:id="@+id/checkoutLine4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"
        android:layout_below="@id/summayTv"
        android:layout_marginTop="@dimen/dp_14"/>

    <RelativeLayout
        android:id="@+id/rl_orderTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkoutLine4"
        android:layout_marginTop="@dimen/dp_27">

        <TextView
            android:id="@+id/checkoutTotalItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="@string/subTotal"/>

        <TextView
            android:id="@+id/checkoutTotalItem1Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="$130"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/checkoutTotalItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorhiliteGreen"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/checkoutTotalItem1"
            android:text="@string/promo"/>

        <TextView
            android:id="@+id/checkoutTotalItem2Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorhiliteGreen"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/checkoutTotalItem1Detail"
            android:text="$50"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/checkoutTotalItem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/checkoutTotalItem2"
            android:text="@string/taxes"/>

        <TextView
            android:id="@+id/checkoutTotalItem3Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/checkoutTotalItem2Detail"
            android:text="$7"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/checkoutTotalItem4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/checkoutTotalItem3"
            android:text="@string/deliveryCost"/>

        <TextView
            android:id="@+id/checkoutTotalItem4Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/checkoutTotalItem3Detail"
            android:text="$10"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/checkoutLine5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line"
            android:layout_below="@id/checkoutTotalItem4"
            android:layout_marginTop="@dimen/dp_19"/>

        <TextView
            android:id="@+id/checkoutTotalItem5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorhiliteGreen"
            android:textSize="@dimen/sp_16"
            android:layout_below="@id/checkoutLine5"
            android:text="@string/grandTotal"/>

        <TextView
            android:id="@+id/checkoutTotalItem5Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            android:layout_below="@id/checkoutLine5"
            android:text="$97"
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <Button
        android:id="@+id/checkOutPlaceOrderBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_46"
        android:src="@drawable/ic_bg_2"
        android:text="Place order"
        android:textColor="@color/white"
        android:background="@drawable/ic_bg_2"
        android:layout_below="@id/rl_orderTotal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

    </ScrollView>


</layout>