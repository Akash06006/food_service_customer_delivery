<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tiffinMainViewModel"
            type="com.example.services.viewmodels.tiffinViewModel.TiffinViewModel" />

    </data>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">





        <LinearLayout
            android:id="@+id/ll_meal_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

    <Button
        android:id="@+id/meal_break_btn"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:text="@string/breakfast"
        android:textSize="@dimen/sp_16"
        android:padding="@dimen/dp_12"
        android:drawableTop="@drawable/ic_meal_2_grey"
        android:background="@drawable/ic_rectangle_meal_2"
        android:backgroundTint="@color/colorGrey4"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20" />

        <Button
            android:id="@+id/meal_lunch_btn"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:text="@string/lunch"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:padding="@dimen/dp_12"
            android:drawableTop="@drawable/ic_meal_bld"
            android:background="@drawable/ic_rectangle_meal_2"
            android:backgroundTint="@color/colorhiliteGreen"
            android:textAllCaps="false"
            android:layout_weight="@integer/int_1"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"/>

        <Button
            android:id="@+id/meal_din_btn"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:text="@string/dinner"
            android:textSize="@dimen/sp_16"
            android:padding="@dimen/dp_12"
            android:drawableTop="@drawable/ic_meal_2_grey"
            android:background="@drawable/ic_rectangle_meal_2"
            android:backgroundTint="@color/colorGrey4"
            android:textAllCaps="false"
            android:layout_weight="@integer/int_1"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_meal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_meal_icons"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/ic_rectangle_3_meal_top">

            <TextView
                android:id="@+id/tv_date_orders"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_60"
                android:text="03 Aug"
                android:padding="@dimen/dp_20"
                android:gravity="center_vertical"
                android:textColor="@color/colorhiliteGreen"
                android:textSize="@dimen/sp_16"/>

            <TextView
                android:id="@+id/tv_no_of_meals"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_60"
                android:text="2 Items Ordered"
                android:layout_toRightOf="@id/tv_date_orders"
                android:padding="@dimen/dp_20"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"/>

            <TextView
                android:id="@+id/tv_orders_meals_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_60"
                android:text="Rs. 297"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_20"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_meal_info"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/ic_meal_rectangle"
            android:padding="@dimen/dp_20"
            android:layout_centerHorizontal="true">


            <TextView
                android:id="@+id/orderItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="@string/filterPackages"/>

            <TextView
                android:id="@+id/orderItem1Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text=""
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/orderItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_14"
                android:layout_below="@id/orderItem1"
                android:text="@string/tiffinFor"/>

            <TextView
                android:id="@+id/orderItem2Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_14"
                android:layout_below="@id/orderItem1Detail"
                android:text=""
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/orderItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_14"
                android:layout_below="@id/orderItem2"
                android:text="@string/excludedDays"/>

            <TextView
                android:id="@+id/orderItem3Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_14"
                android:layout_below="@id/orderItem2Detail"
                android:text=""
                android:layout_alignParentRight="true"/>


            <ImageView
                android:id="@+id/orderLineNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_line"
                android:layout_below="@id/orderItem3Detail"
                android:layout_marginTop="@dimen/dp_19"/>


            <TextView
                android:id="@+id/orderTotalItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderLineNew"
                android:layout_marginTop="@dimen/dp_20"
                android:textSize="@dimen/sp_14"
                android:text="@string/subTotal"/>

            <TextView
                android:id="@+id/orderTotalItem1Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="0"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/orderTotalItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/colorhiliteGreen"
                android:textSize="@dimen/sp_14"
                android:layout_below="@id/orderTotalItem1"
                android:text="@string/promo"/>

            <TextView
                android:id="@+id/orderTotalItem2Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/colorhiliteGreen"
                android:textSize="@dimen/sp_14"
                android:layout_below="@id/orderTotalItem1Detail"
                android:text="0"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/orderTotalItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_14"
                android:layout_below="@id/orderTotalItem2"
                android:text="@string/taxes"/>

            <TextView
                android:id="@+id/orderTotalItem3Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_14"
                android:layout_below="@id/orderTotalItem2Detail"
                android:text="0"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/orderTotalItem4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_14"
                android:layout_below="@id/orderTotalItem3"
                android:text="@string/deliveryCost"/>

   <!--         <TextView
                android:id="@+id/orderTotalItem4Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_14"
                android:layout_below="@id/orderTotalItem3Detail"
                android:text="0"
                android:layout_alignParentRight="true"/>-->

            <ImageView
                android:id="@+id/orderLine4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_line"
                android:layout_below="@id/orderTotalItem4"
                android:layout_marginTop="@dimen/dp_19"/>

            <TextView
                android:id="@+id/orderTotalItem5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/colorhiliteGreen"
                android:textSize="@dimen/sp_16"
                android:layout_below="@id/orderLine4"
                android:text="@string/grandTotal"/>

            <TextView
                android:id="@+id/orderTotalItem5Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_16"
                android:layout_below="@id/orderLine4"
                android:text="0"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>

</layout>