<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.services.common.BindingUtils" />

        <variable
            name="cartViewModel"
            type="com.example.services.viewmodels.cart.CartViewModel" />

    </data>

    <RelativeLayout
        android:id="@+id/layoutBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#20000000"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llCookingInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@drawable/round_back_transparent"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="visible">

            <View
                android:id="@+id/closeView"
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="@color/colorBlack"
                android:elevation="5dp"
                android:onClick="@{(v) -> cartViewModel.clickListener(v)}"
                android:padding="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_cross"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="-15dp"
                android:src="@drawable/ic_close_black"
                android:visibility="visible" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/cooking" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Write Some cooking instructions"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16"
                android:visibility="visible"
                tools:ignore="AllCaps" />

            <EditText
                android:id="@+id/etInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/round_back_transparent"
                android:elevation="2dp"
                android:gravity="top"
                android:hint="Write Somthing here..."
                android:maxLines="5"
                android:minLines="3"
                android:padding="10dp" />

            <Button
                android:id="@+id/btnCookingSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addressLayout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_round_stroke"
                android:elevation="@dimen/dp_5"
                android:text="@string/submit"
                android:textColor="@color/colorPrimary"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>
</layout>