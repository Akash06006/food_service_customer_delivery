            <com.goodiebag.pinview.Pinview
                android:id="@+id/pinview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                app:cursorVisible="false"
                android:layout_marginTop="@dimen/dp_30"
                app:forceKeyboard="false"
                app:hint=""
                app:inputType="number"
                app:password="false"
                app:pinBackground="@drawable/shape_round_corner_back"
                app:pinHeight="@dimen/dp_45"
                app:pinLength="6"
                app:pinWidth="@dimen/dp_35"
                app:textSize="@dimen/sp_9" />


            <RelativeLayout
                android:id="@+id/parent"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/pinview"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm "
                    android:layout_centerVertical="true"
                    android:id="@+id/tvConfirm"
                    app:font="@{`bold`}"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dp_20" />

                <TextView
                    android:id="@+id/btn_send"
                    android:layout_centerVertical="true"

                    android:layout_toRightOf="@+id/tvConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_shape"
                    android:drawableLeft="@drawable/ic_right_arrow"
                    android:paddingLeft="@dimen/dp_15"
                    android:onClick="@{(v) -> verifViewModel.clickListener(v)}"

                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableTint="@color/white"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_5"

                    />


            </RelativeLayout>

            <LinearLayout

                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/dp_50"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
