<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_18"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/myOrderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_20"
        android:text="@string/myOrderTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/myOrderBackButton"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:src="@drawable/ic_back"
        android:layout_marginTop="@dimen/dp_10"/>



    <LinearLayout
        android:id="@+id/ll_my_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/myOrderTitle"
        android:layout_marginTop="@dimen/dp_32">

        <ImageView
            android:id="@+id/img_tiffin_myOrder"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:elevation="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_category" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_tiffin_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:singleLine="true"
                android:text="Maharaja Mac"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black" />


            <TextView
                android:id="@+id/myorder_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_13"
                android:text="North Indian"
                android:layout_below="@id/tv_tiffin_order_title"/>

            <ImageView
                android:id="@+id/myorder_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:layout_below="@id/myorder_tag_tv"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_4"/>

            <TextView
                android:id="@+id/ratingValuetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myorder_tag_tv"
                android:layout_toRightOf="@id/myorder_star"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="4.1"/>

            <TextView
                android:id="@+id/ratingstv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myorder_tag_tv"
                android:layout_toRightOf="@id/ratingValuetv"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="@string/ratings"/>

            <TextView
                android:id="@+id/ratingsTotalOrderstv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myorder_tag_tv"
                android:layout_toRightOf="@id/ratingstv"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_2"
                android:text=". 500+"/>


            <ImageView
                android:id="@+id/myorder_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_place"
                android:layout_below="@id/myorder_star"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_4"/>

            <TextView
                android:id="@+id/locationValuetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myorder_star"
                android:layout_toRightOf="@id/myorder_location"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="2"/>

            <TextView
                android:id="@+id/locatonTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myorder_star"
                android:layout_toRightOf="@id/locationValuetv"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="@string/kmAway"/>


        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_orderItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_my_order"
        android:layout_marginTop="@dimen/dp_27">

        <TextView
            android:id="@+id/orderItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="Aloo Parantha x 2"/>

        <TextView
            android:id="@+id/orderItem1Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="$80"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/orderItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/orderItem1"
            android:text="Curd x 2"/>

        <TextView
            android:id="@+id/orderItem2Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/orderItem1Detail"
            android:text="$30"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/orderItem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/orderItem2"
            android:text="Sweet Lassi x 2"/>

        <TextView
            android:id="@+id/orderItem3Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/orderItem2Detail"
            android:text="$20"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/orderLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"
        android:layout_below="@id/rl_orderItems"
        android:layout_marginTop="@dimen/dp_14"/>

    <TextView
        android:id="@+id/orderAddItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorhiliteGreen"
        android:text="@string/addMoreItems"
        android:layout_below="@id/orderLine1"
        android:layout_marginTop="@dimen/dp_15"/>

    <TextView
        android:id="@+id/orderAddMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorhiliteGreen"
        android:text="@string/addMore"
        android:layout_below="@id/orderLine2"
        android:layout_marginTop="@dimen/dp_15"/>

    <TextView
        android:id="@+id/deliveryInstrucTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderLine2"
        android:text="@string/deliveryInstructions"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_15"/>

    <ImageView
        android:id="@+id/orderLine3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"
        android:layout_below="@id/deliveryInstrucTv"
        android:layout_marginTop="@dimen/dp_14"/>


    <ImageView
        android:id="@+id/orderLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"
        android:layout_below="@id/orderAddItems"
        android:layout_marginTop="@dimen/dp_14"/>

    <RelativeLayout
        android:id="@+id/rl_orderTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderLine3"
        android:layout_marginTop="@dimen/dp_27">

        <TextView
            android:id="@+id/orderTotalItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="@string/subTotal"/>

        <TextView
            android:id="@+id/orderTotalItem1Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="$130"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/orderTotalItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorhiliteGreen"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/orderTotalItem1"
            android:text="@string/promo"/>

        <TextView
            android:id="@+id/orderTotalItem2Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorhiliteGreen"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/orderTotalItem1Detail"
            android:text="$50"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/orderTotalItem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/orderTotalItem2"
            android:text="@string/taxes"/>

        <TextView
            android:id="@+id/orderTotalItem3Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/orderTotalItem2Detail"
            android:text="$7"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/orderTotalItem4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/orderTotalItem3"
            android:text="@string/deliveryCost"/>

        <TextView
            android:id="@+id/orderTotalItem4Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_14"
            android:layout_below="@id/orderTotalItem3Detail"
            android:text="$10"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/orderLine4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line"
            android:layout_below="@id/orderTotalItem4"
            android:layout_marginTop="@dimen/dp_19"/>

        <TextView
            android:id="@+id/orderTotalItem5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorhiliteGreen"
            android:textSize="@dimen/sp_16"
            android:layout_below="@id/orderLine4"
            android:text="@string/grandTotal"/>

        <TextView
            android:id="@+id/orderTotalItem5Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            android:layout_below="@id/orderLine4"
            android:text="$97"
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_46"
        android:src="@drawable/ic_bg_2"
        android:text="@string/myOrderCheckOut"
        android:textColor="@color/white"
        android:background="@drawable/ic_bg_2"
        android:layout_below="@id/rl_orderTotal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>