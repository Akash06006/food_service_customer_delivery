<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tiffinMainViewModel"
            type="com.example.services.viewmodels.tiffinViewModel.TiffinViewModel" />

    </data>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<HorizontalScrollView
    android:id="@+id/filterScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_linearFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_back_transparent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center"
            android:src="@drawable/ic_filter"
            android:background="@color/colorGrey2"
            android:onClick="@{(v) -> tiffinMainViewModel.clickListener(v)}"
            android:drawablePadding="@dimen/dp_5"/>

    </LinearLayout>

</HorizontalScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tiffinFrag1Recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_50"/>
</FrameLayout>

</layout>