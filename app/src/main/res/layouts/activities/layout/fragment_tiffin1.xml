<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tiffinMainViewModel"
            type="com.example.services.viewmodels.tiffinViewModel.TiffinViewModel" />

    </data>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/filterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_13"
        android:gravity="center"
        android:src="@drawable/ic_filter_icon"
        android:background="@drawable/ic_filter_icon_bg"
        android:onClick="@{(v) -> tiffinMainViewModel.clickListener(v)}" />

<HorizontalScrollView
    android:id="@+id/filterScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_toRightOf="@id/filterButton">

    <LinearLayout
        android:id="@+id/ll_linearFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/round_back_transparent"
        android:orientation="horizontal">


    </LinearLayout>

</HorizontalScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tiffinFrag1Recycler"
        android:layout_below="@id/filterButton"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </RelativeLayout>

</FrameLayout>

</layout>