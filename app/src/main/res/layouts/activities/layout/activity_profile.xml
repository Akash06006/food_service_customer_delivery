<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="profileViewModel"
            type="com.example.services.viewmodels.profile.ProfileViewModel" />

        <variable
            name="profileModel"
            type="com.example.services.model.LoginResponse.Body" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <include
            android:id="@+id/common_tool_bar"
            layout="@layout/common_toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(v) -> profileViewModel.clickListener(v)}" />

        <ScrollView
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/ic_category"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:alpha="0.3"
                        android:background="#000000"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/upload_profile_layer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-55dp"
                    android:gravity="center"
                    android:onClick="@{(v) -> profileViewModel.clickListener(v)}"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_profile"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/todo"
                            android:src="@{profileModel.image!=null ?  profileModel.image.toString():@string/todo,default=@drawable/ic_person}"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="1dp" />


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_edit"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignEnd="@+id/img_profile"
                            android:layout_alignRight="@+id/img_profile"
                            android:layout_alignBottom="@+id/img_profile"
                            android:background="@drawable/ic_edit_image"
                            android:elevation="@dimen/dp_10"
                            android:onClick="@{(v) -> profileViewModel.clickListener(v)}"
                            android:padding="@dimen/dp_8"
                            tools:targetApi="lollipop" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/iv_profile_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/upload_profile_picture"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/sp_13"
                        android:visibility="gone"
                        app:font="@{`regular`}" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:text="Akash Gharu"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack2"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:font="@{`bold`}" />

                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:text="My loyality point: 50 "
                    android:textAllCaps="false"
                    android:textColor="@color/tabSelection"
                    android:textSize="@dimen/sp_13"
                    android:visibility="gone"
                    app:font="@{`regular`}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:onClick="@{(v) -> profileViewModel.clickListener(v)}"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/myOrders"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="@{(v) -> profileViewModel.clickListener(v)}"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10">

                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/shape_round_corner_grey">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/book" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center"
                            android:text="My Orders"
                            android:textAllCaps="false"
                            android:visibility="visible"
                            app:font="@{`regular`}" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/myOrdersHistory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="@{(v) -> profileViewModel.clickListener(v)}"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10">

                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/shape_round_corner_grey">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/invoice" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center"
                            android:text="Booking History"
                            android:textAllCaps="false"
                            android:visibility="visible"
                            app:font="@{`regular`}" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:hint="@string/first_name"
                        android:textColorHint="@color/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:inputType="text"
                            android:maxLength="30"
                            android:singleLine="true"
                            android:text="@{profileModel.firstName}"
                            android:textColor="@color/colorblack"
                            android:textStyle="bold"
                            app:font="@{`regular`}"
                            tools:ignore="MissingConstraints" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <!--                            android:background="@drawable/ic_editttext_bg"
                    -->
                    <EditText
                        android:id="@+id/et_firstname1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@drawable/ic_editttext_bg"
                        android:elevation="@dimen/dp_5"
                        android:hint="@string/first_name"
                        android:inputType="text"
                        android:maxLength="30"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:singleLine="true"
                        android:text="@{profileModel.firstName}"
                        android:textColor="@color/colorblack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone"
                        app:font="@{`regular`}"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:hint="@string/last_name"
                        android:textColorHint="@color/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLength="30"
                            android:singleLine="true"
                            android:text="@{profileModel.lastName}"
                            android:textColor="@color/colorblack"
                            android:textColorHint="@color/colorGrey"
                            android:textStyle="bold"
                            app:font="@{`regular`}"
                            tools:ignore="MissingConstraints" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/et_lastname1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_editttext_bg"
                        android:elevation="@dimen/dp_5"
                        android:hint="@string/last_name"
                        android:inputType="text"
                        android:maxLength="30"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:singleLine="true"
                        android:text="@{profileModel.lastName}"
                        android:textColor="@color/colorblack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone"
                        app:font="@{`regular`}"
                        tools:ignore="MissingConstraints" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:hint="@string/phone_number"
                        android:textColorHint="@color/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:maxLength="12"
                            android:singleLine="true"
                            android:text="@{profileModel.phoneNumber}"
                            android:textColor="@color/colorblack"
                            android:textColorHint="@color/colorGrey"
                            android:textStyle="bold"
                            app:font="@{`regular`}"
                            tools:ignore="MissingConstraints,TextFields" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/et_phone1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/dp_5"
                        android:hint="@string/phone_number"
                        android:inputType="phone"
                        android:maxLength="12"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:singleLine="true"
                        android:text="@{profileModel.phoneNumber}"
                        android:textColor="@color/colorblack"
                        android:textColorHint="@color/colorGrey"
                        android:visibility="gone"
                        app:font="@{`regular`}"
                        tools:ignore="MissingConstraints,TextFields" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:hint="@string/email1"
                        android:textColorHint="@color/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="100"
                            android:singleLine="true"
                            android:text="@{profileModel.email}"
                            android:textColor="@color/colorblack"
                            android:textColorHint="@color/colorGrey"
                            android:textStyle="bold"
                            app:font="@{`regular`}"
                            tools:ignore="MissingConstraints" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <EditText
                        android:id="@+id/et_email1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_editttext_bg"
                        android:elevation="@dimen/dp_5"
                        android:hint="@string/email1"
                        android:maxLength="100"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:singleLine="true"
                        android:text="@{profileModel.email}"
                        android:textColor="@color/colorblack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone"
                        app:font="@{`regular`}"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_editttext_bg"
                        android:elevation="@dimen/dp_10"
                        android:hint="@string/address"
                        android:maxLength="80"
                        android:maxLines="5"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:singleLine="true"
                        android:textColor="@color/colorblack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone"
                        app:font="@{`regular`}"
                        tools:ignore="MissingConstraints" />
                    <!--android:text="@{profileModel.address}"-->
                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@drawable/ic_edit_back"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:singleLine="true"
                        android:textColor="@color/colorblack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone"
                        app:font="@{`regular`}"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/tv_regex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="@string/regex_message"
                        android:textColor="@color/colorBlack2"
                        android:textSize="@dimen/sp_10"
                        android:visibility="gone"
                        app:font="@{`regular`}" />

                    <EditText
                        android:id="@+id/et_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@drawable/ic_edit_back"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:singleLine="true"
                        android:textColor="@color/colorblack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone"
                        app:font="@{`regular`}"
                        tools:ignore="MissingConstraints" />

                    <!-- <Button
                         android:id="@+id/btn_submit"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:layout_marginTop="@dimen/dp_20"
                         android:contentDescription="@string/todo"
                         android:onClick="@{(v) -> profileViewModel.clickListener(v)}"
                         android:padding="@dimen/dp_10"
                         android:text="@string/submit" />-->
                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_20"
                        android:background="@drawable/shape_round_stroke"
                        android:elevation="@dimen/dp_10"
                        android:onClick="@{(v) -> profileViewModel.clickListener(v)}"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20"
                        android:text="@string/continues"
                        android:textAllCaps="true"
                        android:textColor="@color/buttonTextColor" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>
